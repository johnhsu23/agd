{
  "rules": {
    "curly": true,
    "indent": [
      true,
      "spaces"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "class-name": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "no-any": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-require-imports": true,
    "no-var-keyword": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "eofline": true,
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-eval": true,
    "no-empty": true,
    "no-consecutive-blank-lines": true,
    "max-line-length": [
      true,
      120
    ],

    "no-backbone-get-set-outside-model": true,
    "no-for-in": true,
    "no-octal-literal": true,
    "no-unnecessary-local-variable": true,
    "no-unnecessary-semicolons": true,
    "no-unnecessary-override": true,
    "no-with-statement": true,
    "prefer-const": true,
    "valid-typeof": true,

    "promise-chain-should-complete": true,
    "return-type-decl": true,
    "no-nested-ternary": true,
    "import-jquery": true
  },
  "rulesDirectory": [
    "node_modules/tslint-microsoft-contrib",
    "tslint/rules"
  ]
}
